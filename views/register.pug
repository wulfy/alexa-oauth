extends login_layout.pug
block content
		h1 Register
		if (error) 
			span.error_msg #{error}
		form(method='POST' action='./register')
			div.input-field.col.s6
				i.material-icons.prefix.validate email
				input#email.validate(type="email",name="email",required)
				label(for="email") Email 
				span.helper-text(data-error="Email is not well formated" data-success="Good!")
			div.input-field.col.s6
				i.material-icons.prefix.validate lock
				input#password.validate(type="password",name="password",required)
				label(for="password") Password 
				span.helper-text(data-error="Password is required" data-success="Good!")
			div.buttons
				button.btn.waves-effect.waves-light.green(type='submit') Register
					i.material-icons.left save
				a.btn.waves-effect.waves-light.blue(href='/') Back
					i.material-icons.left home